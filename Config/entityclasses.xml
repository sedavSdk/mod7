<configs>

<!-- Шанс расчленение становится равным @value -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='DismemberChance']/@value">1</set>


<!-- Сила отдачи становится равной base_value + base_value*@value -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group[1]">
		<requirement name="ItemHasTags" tags="ranged"/>
					<passive_effect name="KickDegreesVerticalMin" operation="perc_add" value="4" />
					<passive_effect name="KickDegreesVerticalMax" operation="perc_add" value="4" />
					<passive_effect name="KickDegreesHorizontalMin" operation="perc_add" value="4"/>
					<passive_effect name="KickDegreesHorizontalMax" operation="perc_add" value="4"/>
	</set>
</configs>